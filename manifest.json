{
  "manifest_version": 3,
  "name": "Clubby - Tab Groups",
  "version": "1.0",
  "description": "A simple chrome extension to club similar tabs together to make our life easier. Group tabs by category, custom name, and hostname - smartly.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Clubby",
    "default_icon": "icons/logo48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  }
}